@model DataLayer.Models.Course

@{
    ViewBag.Title = "ویرایش";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-right col-10">
    <h2>ویرایش اطلاعات</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class=" text-right ">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Sysid)
            <div class="control-label col-10">
                <strong>عنوان دوره</strong>
            </div>
            <div class="form-group text-right col-10">
                @*@Html.LabelFor(model => model.NameOfCourse.Course_Title, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="text-right">
                    @Html.DropDownList("Name", (IEnumerable<SelectListItem>)ViewBag.Course_Title, null, new { @class = "form-control text-right ", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.NameOfCourse.Sysid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="control-label col-10">
                <strong>روز برگزاری دوره</strong>
            </div>
            <div class="form-group text-right col-10">
                @*@Html.LabelFor(model => model.Weekdays.DayName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="text-right">
                    @Html.DropDownList("Day", (IEnumerable<SelectListItem>)ViewBag.Day_Name, null, new { @class = "form-control text-right " })
                    @Html.ValidationMessageFor(model => model.Weekdays.Sysid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="control-label col-10">
                <strong>ساعت برگزاری دوره</strong>
            </div>
            <div class="form-group text-right col-10">
                @*@Html.LabelFor(model => model.Hours.HoursTitle, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="text-right">
                    @Html.DropDownList("Time", (IEnumerable<SelectListItem>)ViewBag.Hour_Name, null, new { @class = "form-control text-right " })
                    @Html.ValidationMessageFor(model => model.Hours.Sysid, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="control-label col-10">
                <strong>شناسه استاد</strong>
            </div>
            <div class="form-group text-right col-10">
                @*@Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="text-right">
                    @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control text-right", @value = Session["ID"], @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger text-right" })
                </div>
            </div>

            <div class="form-group text-right ">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ذخیره تغییرات" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="text-right col-10">
        @Html.ActionLink("بازگشت به لیست", "Index", new { }, new { @class = "btn btn-primary" })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
