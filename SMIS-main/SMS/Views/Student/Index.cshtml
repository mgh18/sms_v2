@model IEnumerable<DataLayer.Models.Student>

@{
    ViewBag.Title = "لیست دانشجویان";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-2  text-center">
        <div class="col-sm-10  text-center">
            <h2 class=" text-dark text-center">لیست دانشجویان</h2>
        </div><!-- /.col -->
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a >دانشجویان</a></li> 
            </ol>
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.container-fluid -->

<div class="text-center">
    <table id="studentTable" class="table">
        <thead>
            <tr>

                <th>
                    جزئیات
                </th>

                <th>
                    ایمیل دانشجو
                </th>

                <th>
                    نام دانشجو
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(" ", "Details", new { id = item.Sysid }, new { @class = "btn  btn-success li fa fa-eye" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>
</div>
